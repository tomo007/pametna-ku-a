<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_kitchen_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coustom_main_backgraund_color"
    tools:context="com.example.tomislav.pametnakucaversion01.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="172dp"
            app:srcCompat="@drawable/k" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/light"
                android:layout_width="131dp"
                android:layout_height="116dp"
                android:background="@drawable/zarulja3"
                android:cropToPadding="true"
                android:elevation="0dp"
                android:onClick="kitchenLight"
                android:scaleType="fitCenter" />


            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/light2"
                android:layout_width="131dp"
                android:layout_height="116dp"
                android:background="@drawable/zarulja3"
                android:onClick="kitchenLight2"
                android:scaleType="fitCenter" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="141dp"
            android:backgroundTint="#000C0C0C"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/plug1"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="@drawable/uticnica"
                android:cropToPadding="true"
                android:elevation="0dp"
                android:onClick="kitchenPlug1"
                android:scaleType="fitCenter" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/plug2"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="@drawable/uticnica"
                android:onClick="kitchenPlug2"
                android:scaleType="fitCenter" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/plug3"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="@drawable/uticnica"
                android:onClick="kitchenPlug3"
                android:scaleType="fitCenter" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/plug4"
                style="@android:style/Widget.ImageButton"
                android:layout_width="171dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tv"
                android:cropToPadding="true"
                android:elevation="0dp"
                android:onClick="buttonTv"
                android:scaleType="fitCenter" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
