<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coustom_backgraund_color"
    tools:context=".TVActivity">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <Space
            android:layout_width="83dp"
            android:layout_height="85dp"
            app:layout_column="0"
            app:layout_row="0" />

        <Space
            android:layout_width="134dp"
            android:layout_height="86dp"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/button5"
            style="@android:style/Widget.Button"
            android:layout_width="195dp"
            android:layout_height="90dp"
            android:onClick="buttonMute"
            android:src="@drawable/button_style"
            android:text="MUTE"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/button11"
            style="@android:style/Widget.Button"
            android:layout_width="194dp"
            android:layout_height="90dp"
            android:onClick="buttonPower"
            android:src="@drawable/button_style"
            android:text="POWER"
            app:layout_column="1"
            app:layout_row="0" />

        <Space
            android:layout_width="196dp"
            android:layout_height="94dp"
            app:layout_column="1"
            app:layout_row="2" />

        <Space
            android:layout_width="192dp"
            android:layout_height="94dp"
            app:layout_column="1"
            app:layout_row="2" />

        <Space
            style="@style/AppTheme.PopupOverlay"
            android:layout_width="194dp"
            android:layout_height="90dp"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/button6"
            style="@android:style/Widget.Button"
            android:layout_width="78dp"
            android:layout_height="85dp"
            android:onClick="buttonVolPlus"
            android:src="@drawable/button_style"
            android:text="+"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/button7"
            style="@android:style/Widget.Button"
            android:layout_width="78dp"
            android:layout_height="80dp"
            android:onClick="buttonPrPlus"
            android:src="@drawable/button_style"
            android:text="+"
            app:layout_column="2"
            app:layout_row="2" />

        <Space
            android:layout_width="134dp"
            android:layout_height="86dp"
            app:layout_column="2"
            app:layout_row="0" />

        <TextView
            android:id="@+id/textView2"
            style="@android:style/Widget.Material.TextView"
            android:layout_width="75dp"
            android:layout_height="54dp"
            android:text="        PR"
            app:layout_column="2"
            app:layout_row="3" />

        <TextView
            android:id="@+id/textView3"
            style="@android:style/Widget.Material.TextView"
            android:layout_width="75dp"
            android:layout_height="55dp"
            android:text="     VOL"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/button9"
            style="@android:style/Widget.Button"
            android:layout_width="78dp"
            android:layout_height="79dp"
            android:onClick="buttonVolMinus"
            android:src="@drawable/button_style"
            android:text="-"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/button10"
            style="@android:style/Widget.Button"
            android:layout_width="78dp"
            android:layout_height="79dp"
            android:onClick="buttonPrMinus"
            android:src="@drawable/button_style"
            android:text="-"
            app:layout_column="2"
            app:layout_row="4" />
    </android.support.v7.widget.GridLayout>

</android.support.constraint.ConstraintLayout>